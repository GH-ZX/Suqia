@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Dashboard</h1>
</div>

<div class="row">
    <div class="col-lg-3 col-md-6 mb-4">
        <a asp-controller="Orders" asp-action="Index" class="dashboard-link">
            <div class="card dashboard-card card-orders h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="card-title">Total Orders</div>
                    <div class="card-text">@ViewData["TotalOrders"]</div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <a asp-controller="Customers" asp-action="Index" class="dashboard-link">
            <div class="card dashboard-card card-customers h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="card-title">Total Customers</div>
                    <div class="card-text">@ViewData["TotalCustomers"]</div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <a asp-controller="Tanks" asp-action="Index" class="dashboard-link">
            <div class="card dashboard-card card-tanks h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-truck"></i>
                    </div>
                    <div class="card-title">Total Tanks</div>
                    <div class="card-text">@ViewData["TotalTanks"]</div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <a asp-controller="Drivers" asp-action="Index" class="dashboard-link">
            <div class="card dashboard-card card-drivers h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-id-card-alt"></i>
                    </div>
                    <div class="card-title">Total Drivers</div>
                    <div class="card-text">@ViewData["TotalDrivers"]</div>
                </div>
            </div>
        </a>
    </div>
</div>
