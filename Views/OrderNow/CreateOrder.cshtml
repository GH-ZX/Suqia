@model Soqia.Models.Order

@{
    ViewData["Title"] = "Create Order";
}

<h1>Create Order</h1>

<div>
    <h4>Tank Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Tank.Name
        </dd>
        <dt class="col-sm-2">
            Water Type
        </dt>
        <dd class="col-sm-10">
            @Model.Tank.WaterType
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Tank.Price per barrel
        </dd>
    </dl>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TankId" />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Quantity (in barrels)</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
